<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:title="@string/pref_location_label"
        android:key="@string/pref_location_key"
        android:defaultValue="@string/pref_location_default"
        android:inputType="text"
        android:singleLine="true" />

    <ListPreference
        android:title="@string/title_temperature_unit"
        android:key="@string/pref_unit_key"
        android:summary="Metric temperature unit"
        android:defaultValue="@string/pref_unit_default_value"
        android:entries="@array/unitListNames"
        android:entryValues="@array/unitListValue"/>
</PreferenceScreen>